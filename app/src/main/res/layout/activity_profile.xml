<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/primary_color"
        android:textStyle="bold"
        android:padding="24dp"
        android:layout_centerHorizontal="true"
        android:text="Profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="Name"/>


                <androidx.cardview.widget.CardView
                    style="@style/cardView_for_navigation_item"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/white">

                    <TextView
                        android:id="@+id/activity_profile_name_field"
                        style="@style/login_edit_text"
                        android:gravity="center"
                        android:textColorHint="@android:color/darker_gray"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="Email Address"/>


                <androidx.cardview.widget.CardView
                    style="@style/cardView_for_navigation_item"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/white">

                    <TextView
                        android:id="@+id/activity_profile_email_address_field"
                        style="@style/login_edit_text"
                        android:gravity="center"
                        android:textColorHint="@android:color/darker_gray"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="Phone Number"/>


                <androidx.cardview.widget.CardView
                    style="@style/cardView_for_navigation_item"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/white">

                    <TextView
                        android:id="@+id/activity_profile_phone_number_field"
                        style="@style/login_edit_text"
                        android:gravity="center"
                        android:textColorHint="@android:color/darker_gray"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="Age"/>


                <androidx.cardview.widget.CardView
                    style="@style/cardView_for_navigation_item"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/white">

                    <TextView
                        android:id="@+id/activity_profile_age_field"
                        style="@style/login_edit_text"
                        android:gravity="center"
                        android:textColorHint="@android:color/darker_gray"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="Committee"/>


                <androidx.cardview.widget.CardView
                    style="@style/cardView_for_navigation_item"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/white">

                    <TextView
                        android:id="@+id/activity_profile_committee_field"
                        style="@style/login_edit_text"
                        android:gravity="center"
                        android:textColorHint="@android:color/darker_gray"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>


</RelativeLayout>

